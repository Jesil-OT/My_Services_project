<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnStartStartedService"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/button_background_green"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:text="@string/start_the_started_service"
        android:onClick="startStartedService"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnStopStartedService"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_background_red"
        android:text="@string/stop_the_started_service"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:onClick="stopStartedService"
        app:layout_constraintEnd_toEndOf="@+id/btnStartStartedService"
        app:layout_constraintStart_toStartOf="@+id/btnStartStartedService"
        app:layout_constraintTop_toBottomOf="@+id/btnStartStartedService" />
</androidx.constraintlayout.widget.ConstraintLayout>